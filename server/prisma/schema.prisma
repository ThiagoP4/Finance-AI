generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  idCategory  Int        @id @default(autoincrement())
  description String
  color       String?
  purchases   Purchase[]
}

model Purchase {
  idPurchase Int      @id @default(autoincrement())
  title      String
  value      Float
  date       DateTime @default(now())

  categoryId Int
  category   Category @relation(fields: [categoryId], references: [idCategory])
}